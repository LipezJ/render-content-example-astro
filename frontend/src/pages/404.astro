---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
  <main class="h-[80dvh] flex items-center justify-center">
    <div class="flex items-center justify-center h-[80dvh]">
      <div class="text-center">
        <h1 class="text-4xl font-bold mb-4">404 - Page Not Found</h1>
        <p class="text-lg text-gray-600">The page you are looking for does not exist.</p>
        <a href="/" class="mt-6 inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Go to Home</a>
      </div>
    </div>
  </main>
</Layout>